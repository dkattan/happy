{
    "name": "monorepo",
    "private": true,
    "devDependencies": {
        "@playwright/test": "^1.58.2"
    },
    "scripts": {
        "vscode:bridge:build": "yarn --cwd packages/happy-vscode-extension build",
        "vscode:bridge:dev": "code --extensionDevelopmentPath \"./packages/happy-vscode-extension\" --new-window && yarn vscode:bridge:tail-logs",
        "vscode:bridge:package": "node packages/happy-vscode-extension/scripts/package-vsix.js",
        "vscode:bridge:install": "code --install-extension \"./packages/happy-vscode-extension/dist/happy-vscode-extension.vsix\"",
        "vscode:bridge:install-and-open": "yarn vscode:bridge:build && yarn vscode:bridge:package && yarn vscode:bridge:install && code --new-window && yarn vscode:bridge:tail",
        "vscode:bridge:tail": "powershell -ExecutionPolicy Bypass -File \"./packages/happy-vscode-extension/scripts/tail-vscode-log.ps1\"",
        "vscode:bridge:tail-output": "powershell -ExecutionPolicy Bypass -File \"./packages/happy-vscode-extension/scripts/tail-happy-output.ps1\"",
        "vscode:bridge:tail-logs": "yarn vscode:bridge:tail",
        "vscode:bridge:diagnose": "yarn vscode:bridge:install-and-open && yarn vscode:bridge:tail",
        "vscode:bridge:smoke": "node ./scripts/vscode-bridge-smoke.mjs",
        "ios:copilot:dev": "bash ./scripts/happy-ios-copilot-dev.sh",
        "ios:copilot:dev:insiders": "HAPPY_VSCODE_APP=insiders bash ./scripts/happy-ios-copilot-dev.sh",
        "ios:copilot:dev:rebuild": "HAPPY_FORCE_IOS_REBUILD=1 bash ./scripts/happy-ios-copilot-dev.sh",
        "happy:web:dev": "powershell -ExecutionPolicy Bypass -File \"./scripts/happy-web-dev.ps1\"",
        "happy:web:test": "powershell -ExecutionPolicy Bypass -File \"./scripts/happy-web-test.ps1\"",
        "test:playwright": "npx playwright test"
    },
    "workspaces": {
        "packages": [
            "packages/happy-app",
            "packages/happy-cli",
            "packages/happy-server",
            "packages/happy-vscode-extension"
        ],
        "nohoist": [
            "**/zod",
            "**/react",
            "**/react-dom",
            "**/react-native",
            "**/react-native/**",
            "**/react-native-edge-to-edge/**",
            "**/react-native-incall-manager/**"
        ]
    },
    "packageManager": "yarn@1.22.22"
}
